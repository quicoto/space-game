{
  "name": "space-game",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:js && npm run build:html && npm run build:css",
    "build:html": "node commands/html.js",
    "build:css": "sass --no-source-map --style=compressed src/scss/styles.scss dist/styles.css",
    "build:js": "esbuild src/js/main.js --bundle --minify --outfile=dist/main.min.js",
    "lint:js": "eslint src/js",
    "watch:js": "esbuild src/js/main.js --watch --sourcemap --outfile=dist/main.min.js",
    "watch:css": "sass --watch src/scss/styles.scss dist/styles.css"
  },
  "author": "Ricard Torres",
  "license": "ISC",
  "dependencies": {
    "esbuild": "^0.14.27",
    "sass": "^1.49.9"
  },
  "devDependencies": {
    "eslint": "^8.11.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4"
  }
}
